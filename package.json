{
  "name": "pva-bazaar",
  "version": "1.0.0",
  "description": "PVA Bazaar - Artisan Marketplace with Digital Provenance",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:security": "jest --testPathPattern=security",
    "test:a11y": "pa11y-ci --config qa/pa11y/pa11y.ci.json",
    "test:lighthouse": "lhci autorun --config=qa/lighthouse/lhci.json",
    "test:contracts": "cd apps/contracts && forge test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security && npm run test:a11y",
    "qa:validate-tokens": "node -r ts-node/register qa/design-system/token-validator.ts",
    "qa:check-brand": "node -r ts-node/register qa/brand/check-brand-tokens.ts",
    "qa:chaos": "playwright test qa/chaos/",
    "qa:axe": "node -r ts-node/register qa/axe/axe-runner.ts",
    "qa:ai-generate": "node -r ts-node/register qa/ai-test-generator/ai-test-generator.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@eslint/js": "^9.0.0",
    "@faker-js/faker": "^8.3.1",
    "@jest/globals": "^29.7.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "artillery": "^2.0.3",
    "axe-html-reporter": "^2.2.11",
    "eslint": "^8.54.0",
    "globals": "^13.24.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.1.10",
    "openai": "^4.20.1",
    "pa11y": "^6.2.3",
    "pa11y-ci": "^3.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": [
      "**/__tests__/**/*.(test|spec).(ts|tsx|js)",
      "**/apps/**/*.(test|spec).(ts|tsx|js)",
      "**/qa/**/*.(test|spec).(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "apps/**/*.{ts,tsx,js,jsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage"
  }
}
